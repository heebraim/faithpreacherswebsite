    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const form = document.querySelector(".contact-one__form");
        const resultDiv = document.querySelector(".result");

        form.addEventListener("submit", function (event) {
          event.preventDefault(); // Prevent default form submission

          // Get form values
          const name = form.querySelector('input[name="name"]').value.trim();
          const email = form.querySelector('input[name="email"]').value.trim();
          const message = form
            .querySelector('textarea[name="message"]')
            .value.trim();

          // Basic validation
          if (!name || !email || !message) {
            resultDiv.innerHTML =
              '<p style="color: red;">Please fill in all fields.</p>';
            return;
          }

          // Validate email format
          const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
          if (!emailRegex.test(email)) {
            resultDiv.innerHTML =
              '<p style="color: red;">Please enter a valid email address.</p>';
            return;
          }

          // Construct mailto link
          const subject = encodeURIComponent(
            "Prayer Request or Message from " + name
          );
          const body = encodeURIComponent(
            `Name: ${name}\nEmail: ${email}\nMessage: ${message}`
          );
          const mailtoLink = `mailto:info@faithpreachersministries.com?subject=${subject}&body=${body}`;

          // Open mailto link
          window.location.href = mailtoLink;

          // Display success message
          resultDiv.innerHTML =
            '<p style="color: green;">Opening your email client. Please send the email to submit your message.</p>';

          // Clear form
          form.reset();
        });
      });
    </script>
